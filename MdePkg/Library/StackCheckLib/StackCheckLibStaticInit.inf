[Defines]
  INF_VERSION                    = 0x00010005
  BASE_NAME                      = StackCheckLibStaticInit
  FILE_GUID                      = 2b24dc50-e33d-4c9f-8b62-e826f06e483f
  MODULE_TYPE                    = BASE
  VERSION_STRING                 = 1.0
